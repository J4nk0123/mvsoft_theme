<section class="section section-contact">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="row">
          <div class="col-lg-4 col-md-12 orange-box">
            <h2>{{ current_node.title.value }}</h2>
            {{ current_node.field_description.value|raw }}
          </div>
          <div class="col-lg-8 col-md-12 form-section">
            <div class="text-center mb-5">
              {{ drupal_messages() }}
            </div>

            <form{{ attributes.addClass('row', 'g-3') }}>
              <div class="col-6">
                {{ element.field_f }}
              </div>
              <div class="col-6">
                {{ element.field_last_name }}
              </div>

              <div class="col-6">
                {{ element.field_email }}
              </div>
              <div class="col-6">
                {{ element.field_phone }}
              </div>

              <div class="col-12">
                {{ element.message }}
              </div>
              <div class="col-12 pt-4">
                {{ element.form_build_id }}
                {{ element.form_token }}
                {{ element.form_id }}
                <button type="submit" class="btn btn-primary mt-3">Send Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
