<section class="section section-guide-topics pt-0">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="swiper section-guide-topics__swiper">
          <div class="swiper-wrapper">
            {% for row in view.result %}
              {% set node = row._entity %}
              <div class="swiper-slide">
                <a href="{{ path('entity.node.canonical', {'node': node.id}) }}" class="section-guide-topics__card">
                  <div class="section-guide-topics__card-img">
                    {% if node.field_card_image.entity.uri %}
                      <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_card_image.entity.uri.value) }}" alt="{{ node.field_card_image.alt }}" title="{{ node.field_card_image.alt }}"/>
                    {% elseif node.field_hero_image.entity.uri %}
                      <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_hero_image.entity.uri.value) }}" alt="{{ node.field_hero_image.alt }}" title="{{ node.field_hero_image.alt }}"/>
                    {% elseif node.field_image.entity.uri %}
                      <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_image.entity.uri.value) }}" alt="{{ node.field_image.alt }}" title="{{ node.field_image.alt }}"/>
                    {% endif %}
                  </div>
                  <div class="section-guide-topics__card-text">
                    <h3>{{ node.title.value }}</h3>
                    <p>
                      {% if node.field_city.entity %}
                        {{ node.field_city.entity.name.value }}
                      {% else %}
                        {{ "City Not Available"|t }}
                      {% endif %}
                    </p>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>
</section>
