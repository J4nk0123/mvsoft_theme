<section class="section section-accommodations">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="section-accommodations__textBox">
          {% set index = 1 %}
          {% for row in view.result %}
            {% set node = row._entity %}
            <div class="mb-5">
              <h2><span>{{ index }}.</span> {{ node.title.value }}</h2>
              <div class="section-accommodations__img-container">
                <div class="section-accommodations__img">
                  {% if node.field_card_image.entity.uri.value %}
                    <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_card_image.entity.uri.value) }}" alt="Role Icon" title="Role Icon"/>
                  {% endif %}
                </div>
                <div class="section-accommodations__infos">
                </div>
              </div>
              {% if node.field_description.value and node.field_description.value is not empty %}
                <p>{{ node.field_description.value|striptags }}</p>
              {% endif %}
              <a class="btn btn-primary" href="{{ node.field_link.value[0].uri }}">Read more</a>
            </div>
            {% set index = index + 1 %}
          {% endfor %}
        </div>

