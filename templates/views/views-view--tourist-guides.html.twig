<section class="section section-hero-about section-hero-where">
  <div class="section-hero-about__background">
    {% if current_node.field_hero_image.entity.uri %}
      <img loading="lazy" class="img-fluid" src="{{ file_url(current_node.field_hero_image.entity.uri.value) }}" alt="{{ current_node.field_hero_image.alt }}" title="{{ current_node.field_hero_image.alt }}"/>
    {% endif %}
  </div>
  <div class="container">
    <div class="row h-100">
      <div class="col-12 flex-column d-flex justify-content-between">
        <div class="section-hero__breadcrumbs">{{ drupal_breadcrumb() }}</div>

        <div>
          <div class="section-title m-0">
            <h1 class="p-0" style="text-align: start !important;">{{ current_node.title.value }}</h1>
          </div>

          <div class="section-description">
            {% if current_node.body.summary %}
              <p>{{ current_node.body.summary|striptags|truncate(300, true, '...') }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
