<section class="section section-our-team">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2 class="title-dots">MEET <span>OUR TEAM</span></h2>
          <div class="section-our-team__title-dots text-center">
            <img src="/{{ directory }}/img/Group 1000001231.svg" alt="Title Dots" title="Title Dots"  />
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="swiper section-our-team__swiper">
          <div class="swiper-wrapper">
            {% for row in view.result %}
              {% set node = row._entity %}
              <div class="swiper-slide">
                <div class="section-our-team__card">
                  <div class="section-our-team__card-top">
                    <div class="section-our-team__card-img">
                      {% if node.field_member_image.entity.uri.value %}
                        <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_member_image.entity.uri.value) }}" alt="{{ node.title.value }}" title="{{ node.title.value }}"/>
                      {% endif %}
                    </div>
                    <div class="section-our-team__card-top__text">
                      <span>{{ node.field_name.value }}</span>
                      <span>{{ node.field_surname.value }}</span>
                      {% if node.field_role.value %}
                        <span>{{ node.field_role.value }}</span>
                      {% endif %}
                    </div>
                  </div>
                  <div class="section-our-team__card-bottom">
                    <div class="section-our-team__card-icon">
                      {% if node.field_icon_image.entity.uri.value %}
                        <img loading="lazy" class="img-fluid" src="{{ file_url(node.field_icon_image.entity.uri.value) }}" alt="Role Icon" title="Role Icon"/>
                      {% endif %}
                    </div>
                    {{ node.body.value|raw }}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>
</section>

