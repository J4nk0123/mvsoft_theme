{% set title_parts = current_node.title.value|split(' ') %}

<section class="section section-hero-about">
  <div class="section-hero-about__background">
    {% if current_node.field_hero_image.entity.uri %}
      <img loading="lazy" class="img-fluid" src="{{ file_url(current_node.field_hero_image.entity.uri.value) }}" alt="{{ current_node.field_hero_image.alt }}" title="{{ current_node.field_hero_image.alt }}"/>
    {% endif %}
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 d-flex flex-column align-items-center justify-content-center">
        <div class="section-title">
          <h1>{{ title_parts[0] }} <span>{{ title_parts[1] }}</span></h1>
        </div>
        <div class="section-description">
          {% if current_node.field_description.value and current_node.field_description.value is not empty%}
            <p>{{ current_node.field_description.value|striptags }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

